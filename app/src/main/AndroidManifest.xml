<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uchicago.yifan.meditreader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.CreatePost.CreatePostActivity" />
        <activity android:name=".Activities.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.CreatePost.CreateTextPostActivity" />
        <activity android:name=".Activities.CreatePost.CreateLinkPostActivity" />
        <activity android:name=".Activities.CreatePost.CreateImagePostActivity" />
        <activity android:name=".Activities.CreatePost.CreateQuotePostActivity"></activity>
    </application>

</manifest>